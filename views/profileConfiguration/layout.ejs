<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;0,900;1,300;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
    />
    <link
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./../../css/style.css" />
    <title>Document</title>
  </head>
  <body style="padding: 0px">
    <div class="container">
      <div class="header">
        <div class="header__link">
          <a href="http://127.0.0.1:3000/" class="header__link--text">All Books</a>
        </div>
        <div class="header__logo">
          <img
            src="/img/logo.png"
            style="width: 100px; height: 70px"
            alt="logo"
            class="header__logo--img"
          />
        </div>
        <div class="profile__header--right">
          <div class="profile__pic">
            <img
              src="/img/users/<%= user.img %>"
              alt=""
              class="profile__pic--placeholder"
              id="jsdropdown"
            />
            <!-- <span class="profile__pic--name">username</span>
            <a href="#" class="btn__logout">Logout</a> -->
          </div>
        </div>
        <div class="profile__option" id="jsoptiondropdown">
          <ul id="drop__down--menu">
            <li id="drop__down--menu">
              <div class="flex__box" id="drop__down--menu">
                <img src="/img/users/<%= user.img %>" alt="" id="drop__down--menu" />
                <div class="user__info" id="drop__down--menu">
                  <h4 id="drop__down--menu">User Name</h4>
                </div>
              </div>
            </li>
            <li id="drop__down--menu">
              <a href="#" class="" id="drop__down--menu"
                ><i class="fa fa-cog icon" aria-hidden="true" id="drop__down--menu"></i> Account
                Settings</a
              >
            </li>
            <li id="drop__down--menu">
              <a href="#" class="" id="drop__down--menu"
                ><i class="fa fa-sign-out" id="drop__down--menu"></i> Sign out</a
              >
            </li>
          </ul>
        </div>
      </div>
      <%- body %>
    </div>
    <script src="../../Javascript/uiscript.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script src="/js/bundle.js"></script>
    <script>
      function readURL(input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function (e) {
            $("#imagePreview").css("background-image", "url(" + e.target.result + ")");
            $("#imagePreview").hide();
            $("#imagePreview").fadeIn(650);
          };
          reader.readAsDataURL(input.files[0]);
        }
      }
      $("#img").change(function () {
        readURL(this);
      });
    </script>
  </body>
</html>
